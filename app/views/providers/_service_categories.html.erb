<div class="autoscroll">
  <table class="list">
    <thead>
      <tr>
        <th>Servicio</th>
        <th>Item</th>
        <th>Modalidad</th>
        <th>Descripción</th>
        <th>Unidad de medida</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.service %></td>
          <td><%= category.item %></td>
          <td><%= category.mode %></td>
          <td><%= category.description %></td>
          <td><%= category.measurament_unit %></td>
          <td><%= link_to 'editar', edit_provider_category_path(category), class: 'icon icon-edit' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p class="pagination">
  <% params[:tab] = 'ServiceCategories' %>
  <%= pagination_links_full @category_pages, @category_count  %>
</p>

<%= link_to 'Nueva categoría de servicio', new_provider_category_path, class: 'icon icon-add' %>
